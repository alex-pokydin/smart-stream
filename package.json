    "cookie-parser": "^1.4.3",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "ffmpeg-progress-stream": "^1.2.1",
    "http-errors": "^2.0.0",
    "jade": "^1.11.0",
    "node-json-db": "^2.2.0",
    "onvif": "github:pavhunter/onvif"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "cross-os": "^1.3.0",
    "forever-service": "^0.5.11",
    "nodemon": "^2.0.22"
  }
}
