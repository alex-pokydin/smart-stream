{
  "name": "@smart-stream/backend",
  "version": "1.0.0",
  "description": "Smart Stream Backend API",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/app.js",
    "docker": "DEBUG=smart-stream:* tsx src/app.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@smart-stream/shared": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "zod": "^3.22.4",
    "ws": "^8.14.2",
    "debug": "^4.3.4",
    "http-errors": "^2.0.0",
    "ffmpeg-progress-stream": "github:alex-pokydin/ffmpeg-progress-stream",
    "node-json-db": "^2.2.0",
    "onvif": "github:alex-pokydin/onvif"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/ws": "^8.5.8",
    "@types/debug": "^4.1.12",
    "typescript": "^5.2.2",
    "tsx": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  }
}
