{
  "name": "@smart-stream/frontend",
  "version": "1.0.0",
  "description": "Smart Stream React Frontend",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
