{
  "name": "smart-stream-monorepo",
  "version": "1.0.0",
  "description": "Smart Stream Home Assistant Add-on - Modern TypeScript & React",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean && rimraf node_modules",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "backend:dev": "pnpm --filter @smart-stream/backend dev",
    "frontend:dev": "pnpm --filter @smart-stream/frontend dev",
    "shared:build": "pnpm --filter @smart-stream/shared build",
    "docker": "pnpm --filter @smart-stream/backend docker"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}